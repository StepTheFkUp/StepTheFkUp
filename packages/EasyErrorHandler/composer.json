{
    "name": "eonx-com/easy-error-handler",
    "description": "Provides customizable ready-to-use error handler for Lumen applications",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "eonx-com/apiformats": "^1.0",
        "eonx-com/externals": "^1.0 || ^2.0",
        "illuminate/support": "^6.0",
        "nesbot/carbon": "^2.0",
        "eonx-com/easy-logging": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5 || ^8.4",
        "mockery/mockery": "^1.2",
        "laravel/lumen-framework": "^5.8 || ^6.0"
    },
    "autoload": {
        "psr-4": {
            "EonX\\EasyErrorHandler\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EonX\\EasyErrorHandler\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
